<UserControl x:Class="SSE_Reporting.MyProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SSE_Reporting"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="Green" BorderThickness="1" Margin="20, 100, 0,0">

            <Border Name="progl" Width="0" Height="30" BorderThickness="0" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="White" Offset="0.0"></GradientStop>
                        <GradientStop Color="Blue" Offset="0.4"></GradientStop>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

        </Border>
    </Grid>
</UserControl>
